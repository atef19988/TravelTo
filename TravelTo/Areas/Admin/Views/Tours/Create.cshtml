@model TbTour
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
   
            <p class="card-description"> Tour Create Form </p>
            <form class="forms-sample" asp-action="Create" asp-controller="Tours" enctype="multipart/form-data" method="post">
              
                <div class="form-group">
                    <label for="exampleInputUsername1">Name Tour</label>
                    <input asp-for="TourName" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name Tour">
                <span asp-validation-for="TourName" > </span>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Tour Description</label>
                    <textarea asp-for="TourDescription"class="form-control"  placeholder="Tour Description"></textarea>
                    <span asp-validation-for="TourDescription"> </span>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1"> Image Tour</label>
                    <input name="files" type="file" class="form-control" placeholder="File">
                </div>
               

                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
       
            </form>
        </div>
    </div>
</div>