@model TbCompetition
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Competition Edit Form</h4>
             
            <form class="forms-sample" asp-action="Edit" asp-controller="Competitions" enctype="multipart/form-data" method="post">

                <div class="form-group">
                    <label for="exampleInputUsername1">Name Competition</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name Competition">
                    <span asp-validation-for="Name"> </span>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Competition Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Competition Description"></textarea>
                    <span asp-validation-for="Name"> </span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Image Place</label>

                    <input asp-for="ImageName" type="hidden" class="form-control">
                </div>

                 <input   asp-for="EndDate" type="hidden" class="form-control" >

                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>

            </form>
        </div>
    </div>
</div>