@model TbSlider
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
   
            <p class="card-description"> Slider Create Form </p>
            <form class="forms-sample" asp-action="Create" asp-controller="Sliders" enctype="multipart/form-data" method="post">
              
                 
                <div class="form-group">
                    <label for="exampleInputUsername1">Slider Description</label>
                    <textarea asp-for="Description"class="form-control"  placeholder="Slider Description"></textarea>
                    <span asp-validation-for="Description"> </span>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1"> Image Slider</label>
                    <input name="files" type="file" class="form-control" placeholder="File">
                </div>
               

                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
       
            </form>
        </div>
    </div>
</div>