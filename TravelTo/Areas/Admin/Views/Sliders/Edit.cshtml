@model TbSlider
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Edit Form</h4>
             
            <form class="forms-sample" asp-action="Edit" asp-controller="Sliders" enctype="multipart/form-data" method="post">

      
                <div class="form-group">
                    <label for="exampleInputUsername1">Slider Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Slider Description"></textarea>
                    <span asp-validation-for="Description"> </span>
                </div>

                <div class="form-group">
          
                    <input asp-for="ImageName" type="hidden" class="form-control"  >
                </div>


                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>

            </form>
        </div>
    </div>
</div>