@model TbSettings
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Settings Edit Form</h4>
             
            <form class="forms-sample" asp-action="Edit" asp-controller="Settings" enctype="multipart/form-data" method="post">
 
                <div class="form-group">
                    <label for="exampleInputUsername1">Name </label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name Settings">
                    <span asp-validation-for="Name"> </span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Phone</label>
                    <input asp-for="Phone" type="text" class="form-control" id="exampleInputMobile" placeholder="Mobile number">
                    <span asp-validation-for="Phone"> </span>
                </div>
                <div class="form-group">

                    <label for="exampleInputEmail1">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
                    <span asp-validation-for="Email"> </span>

                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Loction</label>
                    <input asp-for="Loction" type="text" class="form-control" id="exampleInputUsername1" placeholder="Loction">
                    <span asp-validation-for="Loction"> </span>
                </div>
                <div class="form-group">

                    <label for="exampleInputEmail1">YouTubeUrl</label>
                    <input asp-for="YouTubeUrl" type="text" class="form-control" id="exampleInputEmail1" placeholder="YouTubeUrl">
                    <span asp-validation-for="YouTubeUrl"> </span>

                </div>
                <div class="form-group">

                    <label for="exampleInputEmail1">FaceBookUrl</label>
                    <input asp-for="FaceBookUrl" type="text" class="form-control" id="exampleInputEmail1" placeholder="FaceBookUrl">
                    <span asp-validation-for="FaceBookUrl"> </span>

                </div>
            
          
                    <input asp-for="ImageName" type="hidden" class="form-control"  >
         
                    <input asp-for="Logo" type="hidden" class="form-control"  >


                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>

            </form>
        </div>
    </div>
</div>